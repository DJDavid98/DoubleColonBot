{
  "name": "@djdavid98/double-colon-bot",
  "version": "1.0.0",
  "description": "Twitch chatbot with functionality that is missing from other bots I've seen",
  "author": "DJDavid98 <djdavid98@protonmail.com> (https://github.com/DJDavid98)",
  "private": true,
  "scripts": {
    "lint": "eslint \"{src,migrations}/**/*.ts\"",
    "build": "tsc",
    "build:clean": "rimraf build",
    "start": "node ./build/index.js",
    "start:dev": "npm run build:clean && npm run build && npm run start",
    "watch:dev:tsc": "tsc --watch --preserveWatchOutput",
    "watch:dev:nodemon": "nodemon ./build/index.js",
    "watch:dev:commands": "concurrently --names TSC,Nodemon -c \"blue,green\" \"npm run watch:dev:tsc\" \"npm run watch:dev:nodemon\"",
    "watch:dev": "npm run build:clean && npm run build && npm run watch:dev:commands",
    "test": "jest --ci",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "db": "node-pg-migrate -f src/node-pg-migrate.config.json",
    "postdb": "ts-node src/cli/generate-db-schema.ts"
  },
  "dependencies": {
    "concurrently": "^6.2.1",
    "dayjs": "^1.11.7",
    "dotenv": "^10.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.8.3",
    "js-levenshtein": "^1.1.6",
    "keypress": "^0.2.1",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.9.0",
    "pm2": "^5.1.0",
    "rimraf": "^3.0.2",
    "shell-escape": "^0.2.0",
    "socket.io": "^4.7.2",
    "tmi.js": "^1.8.5",
    "tslib": "^2.3.0",
    "websocket": "^1.0.34"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/js-levenshtein": "^1.1.1",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.0.5",
    "@types/pg": "^8.6.6",
    "@types/tmi.js": "^1.8.3",
    "@types/websocket": "^1.0.5",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "config": "^3.3.9",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.2.7",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "express": "^4.18.2",
    "husky": "^7.0.4",
    "nodemon": "^2.0.12",
    "pg-to-ts": "^4.1.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7"
  },
  "nodemonConfig": {
    "delay": 1000
  }
}
